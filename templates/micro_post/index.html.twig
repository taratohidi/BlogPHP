{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
{% if posts|length > 0 %}
  {% for post in posts %}
  <div>
    <a href='{{path('app_micro_post_show', {post: post.id})}}'>{{post.title}}</a>   
  </div>
  
  {% endfor %} 
  {% else %}
    <p>There's nothig here!</p>
{% endif %}
</div>

{% endblock %}
